{
    "name": "openeuropa/europa-search-client",
    "description": "A PHP client library for communicating with the Europa Search service.",
    "type": "library",
    "license": "EUPL-1.2",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.3",
        "league/container": "^2",
        "php-http/multipart-stream-builder": "^1.1",
        "phpdocumentor/type-resolver": "^0.4 || ^1.4",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "symfony/options-resolver": "^4.3",
        "symfony/property-info": "^4.3",
        "symfony/serializer": "^4.3"
    },
    "require-dev": {
        "ext-json": "*",
        "guzzlehttp/psr7": "^1.8",
        "http-interop/http-factory-guzzle": "^1.0",
        "openeuropa/code-review": "2.x-dev",
        "php-http/guzzle7-adapter": "^1.0",
        "phpunit/phpunit": "^7.5 || ^8 || ^9"
    },
    "autoload": {
        "psr-4": {
            "OpenEuropa\\EuropaSearchClient\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenEuropa\\Tests\\EuropaSearchClient\\": "./tests/src/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
