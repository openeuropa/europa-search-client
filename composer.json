{
  "name": "ec-europa/oe-europa-search-client",
  "description": "Client library for the Europa Search Service",
  "type": "library",
  "minimum-stability": "alpha",
  "prefer-stable": true,
  "license": "EUPL-1.1",
  "require": {
    "php": ">=5.6",
    "symfony/validator": "^2.8 || ^3.0",
    "symfony/dependency-injection": "^2.8 || ^3.0",
    "symfony/yaml": "^2.8 || ^3.0",
    "symfony/config": "^2.8 || ^3.0",
    "symfony/intl": "^2.8 || ^3.0",
    "guzzlehttp/guzzle": "^6.2",
    "psr/log": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^5",
    "ec-europa/oe-code-review": "^0.0.2"
  },
  "autoload": {
    "psr-4": {
      "EC\\EuropaSearch\\": "./src/EuropaSearch"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "EC\\EuropaSearch\\Tests\\": "./tests/src/EuropaSearch"
    }
  }
}
